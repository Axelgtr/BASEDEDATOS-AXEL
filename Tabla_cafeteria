create table productos (id_producto integer, nombre varchar2(180),
caracteristica varchar2(400), precio float, tama√±o varchar2, tipo varchar2, constraint pk_id_producto primary key (id_producto));

create sequence secuencia_producto
start with 1
increment by 1  
nomaxvalue;


create or replace procedure guardar_producto(My_id_producto OUT integer, 
my_nombre IN varchar2, my_caracteristica In varchar2)
as begin
select secuencia_producto.nextval into my_id_producto from dual;
insert into productos values(my_id_producto, my_nombre, my_caracteristica);
end;

