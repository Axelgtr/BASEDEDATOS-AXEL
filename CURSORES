create table empleado(id integer, nombre varchar2(120), sueldo float);

SET SERVEROUTPUT ON;


--EJERCICIO CURSOR CON UPDATE:

--3) USAR UN CURSOR EXPLICITAMENTE PARA ACTUALIZAR LOS SUELDOS DE ACUERDO A LA SIGUIENTE REGLA...
--|  sI EL SUELDO ES MAYOR A 6000 ACTUALIZAR EL VALOR A EL SUELDO ANTERIOR + 2000
---||  sI EL SUELDO ES MENOR O IGUAL A 6000 ACTUALIZAR EL VALOR A EL SUELDO ANTERIOR + 1000

insert into empleado values (4, 'AHO', 8000);

--visualizar los datos
SELECT * FROM empleado;


DECLARE 
--fOR UPDATE, SE PONE CUANDO NO VA HACER DE SOLO LECTURA.... SINO QUE SE VA HACER UN CAMBIO ↓↓↓↓↓
CURSOR CURSOR_ACTUALIZAR_EMP IS SELECT * FROM EMPLEADO FOR UPDATE;
BEGIN
FOR REC IN CURSOR_ACTUALIZAR_EMP LOOP
IF REC.sueldo > 6000 Then
--TABLA, CAMPO, CURRENT SIGNIFICA ACTUAL
UPDATE EMPLEADO SET SUELDO = REC.SUELDO+2000 WHERE CURRENT OF CURSOR_ACTUALIZAR_EMP;

ELSE
UPDATE EMPLEADO SET SUELDO = REC.SUELDO+1000 WHERE CURRENT OF CURSOR_ACTUALIZAR_EMP;

END IF;
END LOOP;
END;
/
